index = []
finalIndex = []
f = open("C:/Users/ASUS/Documents/Projects/Stemmer/AmharicLanguageStemmer/Authors/ፕሮፌሰር አድሚያለም ፀጋ.txt",
         "r", encoding="utf-16")
a = f.read()
f.close


texts = a.split()
word = texts[0]
word = word[1:]
index.append(word)
print(index)
size = len(texts)
i = 1


while (i < size):
    word = texts[i]
    if (word[-1] == "፣" or word[-1] == "፡"):
        if (word[-1] == "፡" and word[-2] == "፡"):
            word = word[:-2]
        else:
            word = word[:-1]

    if word not in letterDefinitions.StopWords:
        index.append(word)
    i = i+1
print(index)
for word in index:
    if (len(word) > 1):
        if (word[0] == "“"):
            finalIndex.append(word)
        elif (word[-1] == "”"):
            finalIndex.append(word)
        else:
            print(word)
            word = stemmerMain.stemmerMain(word)
            finalIndex.append(word)
f.close()

addFiles(finalIndex, "ፕሮፌሰር አድሚያለም ፀጋ")
